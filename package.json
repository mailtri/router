{
  "name": "mailtri-router",
  "version": "1.0.0",
  "description": "Open Source Email Router for AWS - Core email processing engine for Mailtri",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node dev/run-local.ts",
    "deploy": "cdk deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:unit": "jest --testPathPattern=tests/.*\\.test\\.ts$",
    "test:integration": "jest --testPathPattern=tests/integration\\.test\\.ts$",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "dev:init": "./dev/scripts/dev-init.sh",
    "dev:stop": "./dev/scripts/stop-dev.sh",
    "dev:clean": "docker-compose down -v && docker system prune -f",
    "cdk:synth": "cdk synth",
    "cdk:diff": "cdk diff",
    "cdk:destroy": "cdk destroy",
    "deploy:domain": "./scripts/deploy-with-domain.sh",
    "check:node": "./scripts/check-node-version.sh"
  },
  "keywords": [
    "email",
    "router",
    "aws",
    "ses",
    "lambda",
    "automation",
    "mailtri"
  ],
  "author": "Mailtri Team",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.8",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-cdk": "^2.100.0",
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.3.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-ses": "^3.450.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "aws-lambda": "^1.0.7",
    "mailparser": "^3.6.5",
    "nodemailer": "^6.9.7"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ],
    "*.{ts,js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mailtri/router.git"
  },
  "bugs": {
    "url": "https://github.com/mailtri/router/issues"
  },
  "homepage": "https://github.com/mailtri/router#readme"
}
